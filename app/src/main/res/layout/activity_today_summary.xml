<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodaySummaryActivity">

    <TextView
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/go_back_to_user_action_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:background="@color/background_main"/>

    <Button
        android:id="@+id/go_back_to_user_action_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:background="@color/heading_background"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/board" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/today_summary_text"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text_color_headings"
        android:background="@color/heading_background"
        />
</android.support.constraint.ConstraintLayout>